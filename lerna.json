{
  "version": "3.0.2",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "verifyAccess": false,
      "verifyRegistry": false,
      "ignoreChanges": ["ignored-file", "*.md", "**/__tests__/**"]
    },
    "bootstrap": {
      "hoist": true,
      "npmClientArgs": ["--no-package-lock", "--no-ci"]
    },
    "version": {
      "allowBranch": ["master"],
      "createRelease": "github",
      "conventionalCommits": true,
      "message": "chore(release): publish %s"
    }
  },
  "changelogPreset": "angular"
}
